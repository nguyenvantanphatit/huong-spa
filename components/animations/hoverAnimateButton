"use client"

import { motion } from "framer-motion"
import { ReactNode } from "react"

interface HoverAnimateButtonProps {
    children: ReactNode
    className?: string
}

export default function HoverAnimateButton({
    children,
    className = "",
}: HoverAnimateButtonProps) {
    return (
        <motion.button
            className={className}
            whileHover={{
                scale: 1.05,
                backgroundColor: "#CC424E",
                transition: { duration: 0.2 },
            }}
            whileTap={{ scale: 0.95 }}
        >
            {children}
        </motion.button>
    )
}
